<h1>Authors</h1>

<%= link_to 'Create a new Author', new_author_path %>

<ul>
  <% @authors.each do |author| %>
    <li>
      <%= link_to author.name, author_path(author) %>
      (<%= link_to 'Edit', edit_author_path(author) %> |
      <%= link_to 'Delete', author, method: :delete %>)
    </li>
  <% end %>
</ul>
